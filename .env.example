# Tạo .env.example
echo # Discord Bot Configuration > .env.example
echo DISCORD_TOKEN=your_bot_token_here >> .env.example
echo CLIENT_ID=your_client_id_here >> .env.example
echo GUILD_ID=your_test_server_id_here >> .env.example
echo. >> .env.example
echo # Firebase >> .env.example
echo # Option 1: For local development >> .env.example
echo FIREBASE_KEY_PATH=./firebase/serviceAccountKey.json >> .env.example
echo. >> .env.example
